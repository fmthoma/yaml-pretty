name:                yaml-pretty
version:             0.1.0.0
-- synopsis:
-- description:
homepage:            https://github.com/fmthoma/yaml-pretty#readme
license:             BSD3
license-file:        LICENSE
author:              Franz Thoma
maintainer:          franz.thoma@tngtech.com
copyright:           2017 Franz Thoma
category:            Web
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     Text.Yaml.Pretty
  build-depends:       base >= 4.7 && < 5
                     , bytestring
                     , prettyprinter
                     , scientific
                     , text
                     , unordered-containers
                     , vector
                     , yaml
  default-language:    Haskell2010

test-suite yaml-pretty-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base
                     , bytestring
                     , prettyprinter
                     , QuickCheck
                     , text
                     , vector
                     , yaml
                     , yaml-pretty
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/fmthoma/yaml-pretty
